{
  "name": "Magentic-UI Development",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [8000, 8081, 6080, 37367],
  "portsAttributes": {
    "8000": {
      "label": "Frontend Dev Server",
      "onAutoForward": "openBrowser"
    },
    "8081": {
      "label": "Magentic-UI Backend",
      "onAutoForward": "notify"
    },
    "6080": {
      "label": "noVNC Web Interface"
    },
    "37367": {
      "label": "Playwright Server"
    }
  },
  "postCreateCommand": "pip install -e .[dev,azure,ollama] && cd frontend && npm install",
  "postStartCommand": "echo 'ðŸš€ Environment ready! Run \"magentic ui --port 8081\" to start the server or \"cd frontend && npm run start\" for the development server.'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss"
      ]
    }
  }
}